{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext", "ES2017"],
    "sourceMap": true,
    // "inlineSources": true,
    "allowJs": false,
    "declarationMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "composite": true,
    "skipDefaultLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "es2020",
    "moduleResolution": "Node",
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "rootDir": ".",
    "baseUrl": ".",
    "outDir": "dist",
    "jsx": "react-jsxdev",
    "jsxImportSource": "@emotion/react",
    "paths": {
      "~common/*": ["./src/*"]
    }
  },
  "include": ["src", "src/helpers/__global.ts"],
  "exclude": [
    "**/node_modules",
    ".husky",
    "**/*.css",
    "./tailwind.config.js",
    "node_modules",
    "**/.yalc/**/*",
    ".yalc/**/*"
  ]
}
