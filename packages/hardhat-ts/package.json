    "clean": "cross-env BUILDING=true hardhat clean",
    "deploy:post": "hardhat run scripts/publish.ts",
    "watch:compile": "yarn hardhat watch compile",
    "accounts": "hardhat accounts",
    "generate": "hardhat generate",
    "account": "hardhat account",
    "docs": "hardhat dodocs",
    "verify:etherscan": "hardhat etherscan-verify --api-key PSW8C433Q667DVEX5BCRMGNAH9FSGFZ7Q8",
    "verify:tenderly": "hardhat tenderly-verify",
    "lint": "eslint --config ./.eslintrc.js --ignore-path ./.eslintignore ./deploy/**/*.ts ./tasks/**/*.ts ./test/**/*.ts ./helpers/**/*.ts",
    "solhint": "solhint ./contracts/**/*.sol",
    "format": "yarn prettier -w ./deploy/**/*.ts ./tasks/**/*.ts ./test/**/*.ts ./helpers/**/*.ts contracts/**/*.sol ",
