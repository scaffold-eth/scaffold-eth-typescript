{
  "name": "@scaffold-eth/hardhat",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "hf": "hf() { local network=\"$1\"; shift; FORKING_NETWORK=$network yarn hh --network hardhat \"$@\"; }; hf",
    "test": "test() { TS_NODE_TRANSPILE_ONLY=1 TESTING=1 yarn hf \"$1\" test; }; test",
    "fork": "fork() { TS_NODE_TRANSPILE_ONLY=1 local network=\"$1\"; shift; yarn hf $network fork \"$@\"; }; fork",
    "chain": "yarn hh node --no-deploy",
    "compile": "COMPILING=true yarn hh compile && yarn tsc",
    "deploy": "yarn hh deploy",
    "export": "yarn hh export:deployments",
    "accounts": "yarn hh accounts",
    "balance": "yarn hh balance",
    "send": "yarn hh send",
    "generate": "yarn hh generate",
    "account": "yarn hh account",
    "lint": "eslint '**/*.ts'",
    "format": "prettier --write --loglevel error '**/*.sol' && yarn lint --fix --quiet",
    "git:future": "./scripts/git/future.sh",
    "git:portal": "./scripts/git/portal.sh"
  },
  "dependencies": {
    "@eth-optimism/hardhat-ovm": "^0.2.2",
    "@ethereumjs/vm": "^5.5.3",
    "@ethersproject/providers": "^5.4.1",
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers@^0.3.0-beta.10",
    "@nomiclabs/hardhat-waffle": "^2.0.0",
    "@openzeppelin/contracts": "^4.3.3",
    "@tenderly/hardhat-tenderly": "^1.0.10",
    "@typechain/ethers-v5": "^7.0.1",
    "@typechain/hardhat": "^2.0.2",
    "chai": "^4.2.0",
    "chalk": "^4.1.1",
    "disklet": "^0.5.0",
    "dotenv": "^10.0.0",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.4.1",
    "fs-extra": "^10.0.0",
    "hardhat": "^2.6.0",
    "hardhat-contract-sizer": "^2.1.1",
    "hardhat-deploy": "git://github.com/teller-protocol/hardhat-deploy#84efdfa22e5c252c2415e9a0fb587f5c92993abe",
    "hardhat-deploy-ethers": "^0.3.0-beta.10",
    "hardhat-gas-reporter": "^1.0.4",
    "hardhat-shorthand": "^1.0.0",
    "moment": "^2.29.1",
    "qrcode-terminal": "^0.12.0",
    "semver": "^7.3.5",
    "typechain": "^5.1.1"
  },
  "devDependencies": {
    "@types/chai": "^4.2.22",
    "@types/fs-extra": "^9.0.11",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.1",
    "@types/semver": "^7.3.9",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "chai": "^4.3.4",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard-kit": "0.15.1",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "mocha": "^9.1.3",
    "node-watch": "^0.7.1",
    "prettier": "^2.4.1",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "rlp": "^2.2.7",
    "solhint": "^3.3.6",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.17",
    "ts-node": "^10.3.0",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.3.4"
  },
  "installConfig": {
    "hoistingLimits": "workspaces"
  }
}
