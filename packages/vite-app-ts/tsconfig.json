{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext", "ES2017"],
    "sourceMap": true,
    // "inlineSources": true,
    "allowJs": false,
    "declarationMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "Node",
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "rootDirs": [".", "../common/src"],
    "baseUrl": ".",
    "outDir": "dist",
    "jsx": "react-jsxdev",
    "jsxImportSource": "@emotion/react",
    "paths": {
      "~~/*": ["./src/*"],
      "~common/*": ["../common/src/*"]
    }
  },
  "include": ["src", "vite.config.ts", "../common/src"],
  "exclude": [
    "**/node_modules",
    ".husky",
    "**/*.css",
    "tailwind.config.cjs",
    "node_modules",
    "**/.yalc/**/*",
    ".yalc/**/*"
  ]
}
