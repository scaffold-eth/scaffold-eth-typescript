{
  "name": "@scaffold-eth/solidity",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "chain:hardhat": "cross-env BUILDING=true hardhat node --network hardhat --no-deploy",
    "chain:foundry": "anvil",
    "fork:hardhat": "cross-env hardhat node --fork https://mainnet.infura.io/v3/460f40a260564ac4a4f4b3fffb032dad",
    "test:hardhat": "yarn hardhat test --network hardhat",
    "compile:foundry": "yarn exec forge build",
    "compile:foundry:post": "yarn ts-node scripts/foundryPostCompile.ts",
    "compile:hardhat": "cross-env BUILDING=true hardhat compile",
    "contracts:build": "yarn workspace @scaffold-eth/common contracts:build",
    "watch:hardhat": "cross-env BUILDING=true yarn hardhat watch compile",
    "deploy:hardhat": "hardhat deploy --export-all ../common/src/generated/hardhat_contracts.json",
    "deploy:hardhat:post": "yarn ts-node scripts/hardhatPostDeploy.ts",
    "deploy:foundry": "yarn ts-node scripts/foundryDeploy.ts",
    "deploy:foundry:post": "yarn ts-node scripts/foundryPostDeploy.ts",
    "clean": "yarn cross-env BUILDING=true hardhat clean && yarn shx rm -rf ./generated/*",
    "accounts:hardhat": "hardhat accounts",
    "generate": "hardhat generate",
    "account": "hardhat account",
    "lint": "eslint --config ./.eslintrc.js --ignore-path ./.eslintignore ./deploy/**/*.ts ./tasks/**/*.ts ./tests/**/*.ts ./helpers/**/*.ts",
    "solhint": "solhint ./contracts/**/*.sol",
    "format": "yarn prettier -w ./deploy/**/*.ts ./tasks/**/*.ts ./tests/**/*.ts ./helpers/**/*.ts contracts/**/*.sol ",
    "format:check": "yarn prettier -c ./deploy/**/*.ts ./tasks/**/*.ts ./tests/**/*.ts ./helpers/**/*.ts ./contracts/**/*.sol "
  },
