{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "sourceMap": true,
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "rootDirs": [".", "../common/src"],
    "baseUrl": ".",
    "jsx": "preserve",
    "jsxImportSource": "@emotion/react",
    "paths": {
      "~~/*": ["./src/*"],
      "~common/*": ["../common/src/*"]
    }
  },
  "include": ["src", "src/helpers/__global.ts", "src/helpers/types/env.d.ts"],
  "exclude": [
    "**/node_modules",
    ".husky",
    "**/*.css",
    "tailwind.config.cjs",
    "node_modules",
    "**/.yalc/**/*",
    ".yalc/**/*"
  ]
}
